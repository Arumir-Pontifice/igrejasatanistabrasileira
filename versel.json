{
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1.html",
      "headers": {
        "Content-Type": "text/html; charset=UTF-8"
      }
    },
    {
      "src": "/",
      "dest": "/public/index.html",
      "headers": {
        "Content-Type": "text/html; charset=UTF-8"
      }
    }
  ],
  "cleanUrls": true,
  "rewrites": [
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}